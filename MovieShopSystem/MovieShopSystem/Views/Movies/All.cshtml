@model IEnumerable<MovieListingViewModel>


<div class="row">
    @foreach (var movie in Model)
    {
        <div class="col-md-4">
            <div class="card mb-3">
                <img class="card-img-top" src="@movie.ImageUrl" alt="@movie.Title">
                <div class="card-body text-center">
                    <h5 class="card-title text-center">@movie.Title</h5>
                    <a asp-controller="Cars" asp-action="Details" asp-route-id="@movie.Id" class="btn btn-primary">View More</a>
                </div>
            </div>
        </div>
    }
</div>